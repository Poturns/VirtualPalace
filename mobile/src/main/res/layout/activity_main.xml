<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to VirtualPalace!"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gyro"
        android:id="@+id/textView2"
        android:layout_marginTop="60dp"
        android:layout_below="@id/textView"
        android:layout_toStartOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro Val"
        android:id="@+id/gyro"
        android:layout_marginTop="60dp"
        android:layout_below="@id/textView"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Orientation"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView2"
        android:layout_toStartOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orientation"
        android:text="Orient Val"
        android:visibility="invisible"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accelero"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView3"
        android:layout_toStartOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelero Val"
        android:id="@+id/accelero"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView3"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Network"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView4"
        android:layout_toStartOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Val"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView4"
        android:id="@+id/network"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Battery"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView5"
        android:layout_toStartOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Val"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView5"
        android:id="@+id/battery"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView6"
        android:layout_toStartOf="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Val"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView6"
        android:id="@+id/location"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"/>

</RelativeLayout>